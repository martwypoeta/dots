{
  // color theme
  "workbench.colorTheme": "Kanagawa Wave",
  "workbench.colorCustomizations": {
    "[Kanagawa Dragon]": {
      "titleBar.activeBackground": "#181616",
      "activityBar.background": "#181616",
      "tab.inactiveBackground": "#181616",
      "tab.border": "#181616",
      "tab.hoverBackground": "#181616",
      "editorGroupHeader.tabsBackground": "#181616",
      "gitDecoration.addedResourceForeground": "#81b88b",
      "gitDecoration.untrackedResourceForeground": "#81b88b",
      "gitDecoration.renamedResourceForeground": "#81b88b",
      "scrollbar.shadow": "#ff000000",
    },
    "[Kanagawa Wave]": {
      "titleBar.activeBackground": "#1f1f28",
      "activityBar.background": "#1f1f28",
      "tab.inactiveBackground": "#1f1f28",
      "tab.border": "#1f1f28",
      "tab.hoverBackground": "#1f1f28",
      "editorGroupHeader.tabsBackground": "#1f1f28",
      "gitDecoration.addedResourceForeground": "#98bb6c",
      "gitDecoration.untrackedResourceForeground": "#98bb6c",
      "gitDecoration.renamedResourceForeground": "#98bb6c",
      "scrollbar.shadow": "#ff000000",
    }
  },

  // icon theme
  "workbench.iconTheme": "bearded-icons",

  // window
  "window.zoomLevel": 1.2,
  "window.menuBarVisibility": "compact",

  // font
  "editor.fontFamily": "Iosevka Nerd Font",
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "terminal.integrated.fontSize": 15,

  // ui
  "editor.cursorStyle": "block",
  "workbench.sideBar.location": "right",

  // files
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnSave": true,
  "explorer.compactFolders": false,

  // declutter
  "window.commandCenter": false,
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.stickyScroll.enabled": false,
  "editor.cursorBlinking": "solid",
  "workbench.startupEditor": "none",
  "workbench.navigationControl.enabled": false,
  "workbench.layoutControl.enabled": false,
  "explorer.confirmDelete": false,
}
