# switch workspaces & move windows
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus using arrow keys
super + Left
	bspc node -f west

super + Down
	bspc node -f south

super + Up
	bspc node -f north

super + Right
	bspc node -f east

# reload wm
super + BackSpace
	~/scripts/reload.sh

# scripts
super + slash
	~/scripts/cheatsheet.sh

# applications
super + q
	alacritty

super + w
	librewolf

super + e
	codium

super + a
	deadbeef

# screenshots
Print
	maim -s | xclip -selection clipboard -t image/png && notify-send "Maim" "Screenshot copied to clipboard"

# kill window
super + c
	bspc node -c

# kill wm
super + m
	bspc quit
