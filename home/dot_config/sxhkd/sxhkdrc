# switch workspaces & move windows
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}' {_,--follow}

# focus using arrow keys
super + Left
	bspc node -f west

super + Down
	bspc node -f south

super + Up
	bspc node -f north

super + Right
	bspc node -f east

# reload wm
super + BackSpace
	~/scripts/reload.sh

# applications
super + slash
	~/scripts/cheatsheet.sh

super + q
	alacritty

super + e
	thunar

super + f
	librewolf

super + d
	codium

super + v
	vesktop

super + r
	deadbeef

# kill window
super + c
	bspc node -c

# kill wm
super + m
	bspc quit

# screenshotting
Print
	maim -s | xclip -selection clipboard -t image/png
