# switch workspaces & move windows
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus using arrow keys
super + {Left,Down,Up,Right}
    bspc node -f {west,south,north,east}

# kill window
super + c
	bspc node -c

# kill wm
super + m
	bspc quit

# reload wm
super + BackSpace
	~/scripts/reload.sh

# applications
super + slash
	~/scripts/cheatsheet.sh

super + q
	alacritty

super + w
	librewolf

super + e
	codium

super + a
	deadbeef

super + d
	vesktop

# screenshots
Print
	maim -s | xclip -selection clipboard -t image/png && notify-send "Maim" "Screenshot copied to clipboard"

shift + Print
	maim -s ~/pictures/screenshots/$(date +%s).png && notify-send "Maim" "Screenshot saved to gallery"

# media
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

{XF86AudioPrev, XF86AudioNext, XF86AudioPlay, XF86AudioStop}
    playerctl {previous,next,play-pause,stop}
